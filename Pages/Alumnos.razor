@page "/alumnos"
@inject HttpClient Http
<h3>Alumnos</h3>

<div>
    @if (alumnos == null)
    {
        <p><em>Cargando...</em></p>
    }
    else
    {
        <select class="form-select" aria-label="Default select example" @bind="@carnetAlumno">
            <option selected>Seleccione al alumno</option>
            @foreach (var alumno in alumnos)
            {
                <option value="@alumno.Carnet">@alumno.Nombre</option>
            }
        </select>
    }
</div>

<div>
    <button class="btn btn-primary" @onclick="GuardarAlumno">Inscribir Alumno</button>
</div>

